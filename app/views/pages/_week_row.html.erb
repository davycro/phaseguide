<div class="row week_row">
  <div class="col-md-1 week_col">
    <div class="week_number_big">
      #<%= n %>
    </div>
    <div class="week_dose_count">
      <%= week.dose_count %> doses
    </div>
  </div>

  <%- week.days.each do |day| -%>
    <div class="col-md-1 day_col">
      <div class="day_date">
        <%= day.date.to_formatted_s(:short) %>
      </div>
      <%- if day.dose_count > 0 -%>
        <div class="highlight_day">
          <div class="bg-success">RIF</div>
          <div class="bg-info">INH</div>
          <div class="bg-warning">PZA</div>
          <div class="bg-danger">EMB</div>
        </div>
      <% else -%>
        <div class="no_dose_day">No medications due</div>
      <% end -%>
    </div>
  <% end -%>
</div>